<%= render 'shared/validation_helper', :resource => @organization %>

<%= form_for @organization, :role => 'form' do |f| %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control', :placeholder => "Your company's name" %>
    </div>

    <div class="form-group">
      <%= f.label :image_url, :class => 'control-label' %>
      <%= f.text_field :image_url, :class => 'form-control', :placeholder => "Your company's logo" %>
      <span class="help-block">
        Hum... Ok, an image uploader would be great... But for now you will have to be happy with an url !
      </span>
    </div>

    <div class="form-group">

      <!-- Nav tabs -->
      <ul class="nav nav-pills with-background">
        <div class="pull-right help-block">
          I'm a <a href="#" data-toggle="modal" data-target="#markdownHelper">markdown editor</a>
        </div>
        <li class="active" id="lk-bio-write"><a href="#dv-bio-write" data-toggle="tab">Write</a></li>
        <li id="lk-bio-preview">
          <a href="#dv-bio-preview" data-toggle="tab"
             onclick="update_markdown(<%=@organization.id%>, 'markdown-bio-value', 'body-bio-preview', 'dv-bio-preview', 'lk-bio-preview', 'dv-bio-write', 'lk-bio-write')">Preview</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="dv-bio-write" >
          <%= f.text_area :bio, :placeholder => 'Your report here', :id => 'markdown-bio-value', :class => 'form-control input-lg without-top-radius', :rows => '8' %>
        </div>
        <div class="tab-pane markdown-preview" id="dv-bio-preview">
          <div id="body-bio-preview" >
            <%= markdown(@organization.bio) %>
          </div>
        </div>
      </div>

    </div>

    <% if @organization.id.blank? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :copy_public_question %> Would you like to copy all the public questions to your repository
          </label>
        </div>
    <% end %>

    <hr/>

    <%= link_to 'Cancel', root_path, :class => 'btn btn-default' %>
    <%= f.submit 'Save', :class => 'btn btn-primary' %>

<% end %>


<%= render 'shared/markdown_helper' %>