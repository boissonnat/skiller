<div class="page-header">
  <h1>
    <%= icon('lock')%>
    Sign in
  </h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => 'form') do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Enter your email', :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => 'Enter your password', :class => 'form-control' %>
    </div>


    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </label>
    </div>

    <%= f.submit "Sign in", :class => 'btn btn-default' %>
<% end %>
