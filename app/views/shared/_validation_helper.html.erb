<!--
  Display validation errors for a given resource (useful for forms).
  As Forms are now displayed in Bootstrap panel with col-md-6 width, we use the width for alerts.
-->
<div class="col-md-6  col-md-offset-3">
  <% if resource and resource.errors and resource.errors.count > 0 %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">&times;</a>
        <strong><%= pluralize(resource.errors.count,"error") %> validation problems found.</strong>
        <ul>
          <% resource.errors.full_messages.each do |error| %>
              <li><%= error %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
</div>