<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) + ' | sKiller' : 'sKiller' %></title>

  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!--         Navbar            -->
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%=link_to 'sKiller', root_path,  :class => "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">

      <!-- Left nev (actions) -->
      <ul class="nav navbar-nav">
        <%= render 'layouts/menu/actions_items' %>
      </ul>

      <!-- Right menu (user) -->
      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/menu/user_items' %>
      </ul>

    </div><!--/.nav-collapse -->
  </div>
</div>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!--         Page content            -->
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<div class="page-content">
  <div class="container">
    <% if notice %>
        <div class="alert alert-info alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= notice %>
        </div>
    <% end %>

    <% if alert %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= alert %>
        </div>
    <% end %>

    <%= yield %>
  </div>
</div>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!--         Footer            -->
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<div id="footer">
  <div class="container">
    <p class="text-muted">Developed by <a href="https://www.twitter.com/boissonnat" target="_blank">@Alex</a></p>
  </div>
</div>

</body>
</html>
